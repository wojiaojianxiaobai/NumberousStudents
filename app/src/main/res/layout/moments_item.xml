<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66ffffff">

    <ImageView
        android:id="@+id/find_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_icon" />

    <TextView
        android:id="@+id/moments_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/find_user_icon"
        android:layout_toRightOf="@id/find_user_icon"
        android:text="张三"
        android:textColor="#0000FF"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/find_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moments_item_user_name"
        android:layout_toRightOf="@id/find_user_icon"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/find_user_icon"
        android:text="1+1 = 多少？"
        android:layout_marginStart="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/find_context"
        android:background="#11000000"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_marginEnd="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableStart="@drawable/find_say"
            android:drawableLeft="@drawable/find_say"
            android:background="#00000000"
            android:text="评论"/>


    </LinearLayout>

</RelativeLayout>